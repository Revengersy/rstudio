# This archive includes the files required to build against Qt. It
# was created by installing Qt via an interactive installer, and 
# manually removing components not needed by RStudio.

# define QT archive to download
QT_VERSION=5.11.1
QT_SDK_BINARY=qt-unified-linux-x64-3.0.4-online.run
QT_SDK_URL=https://s3.amazonaws.com/rstudio-buildtools/$QT_SDK_BINARY
QT_SCRIPT=qt-noninteractive-install-linux.qs

# set Qt SDK dir if not already defined
if [ -z "$QT_SDK_DIR" ]; then
  QT_SDK_DIR=~/Qt${QT_VERSION}
  QT_SDK_DIR2=~/Qt/Qt${QT_VERSION}
  QT_SDK_DIR3=~/Qt/${QT_VERSION}
fi

if [ ! -e "$QT_SDK_DIR" ] && [ ! -e "$QT_SDK_DIR2" ] && [ ! -e "$QT_SDK_DIR3" ]
then
   # If there are Qt account credentials, they break the scripted install. This would happen
   # if user logged into a Qt account during a previous manual install of Qt. We delete the
   # file if it exists.
   rm -f ~/.local/share/Qt/qtaccount.ini

   # download and install
   cp ./$QT_SCRIPT /tmp
   wget $QT_SDK_URL -O /tmp/$QT_SDK_BINARY
   chmod u+x /tmp/$QT_SDK_BINARY
   cd /tmp

   # online installer sometimes fails, keep trying...
   while [ ! -e "$QT_SDK_DIR" ] && [ ! -e "$QT_SDK_DIR2" ] && [ ! -e "$QT_SDK_DIR3" ]
   do
      echo "Installing Qt, this will take a while."
      echo "Ignore warnings about QtAccount credentials."
      echo "Do not click on the setup interface, it is controlled by a script."
      ./$QT_SDK_BINARY --script /tmp/$QT_SCRIPT
   done
   rm -f /tmp/$QT_SDK_BINARY /tmp/$QT_SCRIPT
else
   echo "Qt $QT_VERSION SDK already installed"
fi

